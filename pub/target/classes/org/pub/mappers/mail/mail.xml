<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mail">
<insert id="sendcode" parameterType="mail">
insert into chk_email (email,code) values(#{email},#{code})
</insert>
<select id="code" resultType="String">
select code from chk_email where email=#{email}
</select>
<delete id="code_del">
delete from chk_email where email=#{email}
</delete>
</mapper>